<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <email>dev.rindeal+gentoo-overlay@gmail.com</email>
    <name>Jan Chren (rindeal)</name>
  </maintainer>
  <use>
    <flag name="largefile">Enable support for large files</flag>
    <flag name="themes">Install themes</flag>

    <!-- ### Desktop integration ### -->
    <flag name="icons">enable GTK tray icons</flag>
    <flag name="notifications">Enable desktop notifications using <pkg>x11-libs/libnotify</pkg></flag>
    <flag name="xscreensaver">use libXScrnSaver to determine idle time</flag>

    <!-- ### Privacy and security ### -->
    <flag name="otr">Enable OTR (Off The Record) encryption using <pkg>net-libs/libotr</pkg></flag>
    <flag name="pgp">enable PGP (Pretty Good Privacy) using <pkg>app-crypt/gpgme</pkg></flag>

    <!-- ### Plugins ### -->
    <flag name="c-plugins">enable C plugins</flag>
    <flag name="plugins">enable plugins</flag>
    <flag name="python-plugins">enable Python plugins</flag>
  </use>
</pkgmetadata>
