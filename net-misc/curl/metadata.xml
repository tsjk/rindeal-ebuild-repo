<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <email>dev.rindeal+gentoo-overlay@gmail.com</email>
    <name>Jan Chren (rindeal)</name>
  </maintainer>
  <use>
    <!-- ### Compilation options -->
    <flag name="curldebug">curl debug memory tracking</flag>
    <flag name="largefile">Omit support for large files</flag>
    <flag name="libgcc">Use libgcc when linking</flag>
    <flag name="rt">Add dependency on -lrt</flag>
    <!-- static-libs -->
    <flag name="symbol-hiding">Hide library internal symbols ("-fvisibility=hidden"; https://gcc.gnu.org/wiki/Visibility)</flag>
    <flag name="versioned-symbols">Versioned symbols in shared library (https://gcc.gnu.org/wiki/SymbolVersioning)</flag>

    <!-- ### Docs -->
    <flag name="libcurl-option">libcurl C code generation support</flag>
    <flag name="manual">Built-in manual</flag>
    <flag name="verbose">Verbose strings (disable to reduce size)</flag>

    <!-- ### Features (SUPPORT_FEATURES) -->
    <flag name="ipv6">IPv6 support</flag>
    <flag name="unix-sockets">Unix domain sockets</flag>
    <!-- zlib -->
    <flag name="dns_c-ares">Use c-ares library for DNS lookups</flag>
    <flag name="dns_threaded">Use threaded DNS resolver</flag>
    <!-- idn -->
    <flag name="psl">PSL (Publix Suffix List) - avoids privacy-leaking "supercookies"</flag>

    <!-- ### Other Features -->
    <flag name="cookies">Cookies support</flag>
    <flag name="metalink">metalink (.meta4, .metalink files)</flag>
    <flag name="proxy">Proxy support</flag>
    <flag name="ssh2">libssh2 support for (SCP, SFTP)</flag>

    <!-- ### Authentication methods -->
    <flag name="auth_digest">Digest access authentication</flag>
    <flag name="auth_gssapi">GSSAPI (Generic Security Service Application Program Interface)</flag>
    <flag name="auth_kerberos">Kerberos</flag>
    <flag name="auth_ntlm">NTLM (NT LAN Manager )</flag>
    <flag name="auth_ntlm-wb">NTLM delegation to winbind's ntlm_auth helper</flag>
    <flag name="auth_spnego">SPNEGO (Simple and Protected GSSAPI Negotiation Mechanism)</flag>
    <flag name="auth_tls-srp">TLS-SRP authentication</flag>

    <!-- ### Protocols (SUPPORT_PROTOCOLS) -->
    <flag name="protocol_http">HTTP (Hypertext Transfer Protocol)</flag>
    <flag name="protocol_https">HTTPS</flag>
    <flag name="protocol_http2">HTTP/2 - a major revision of the HTTP network protocol</flag>
    <flag name="protocol_ftp">FTP (File Transfer Protocol)</flag>
    <flag name="protocol_ftps">FTPS</flag>
    <flag name="protocol_file">file</flag>
    <flag name="protocol_telnet">telnet</flag>
    <flag name="protocol_ldap">LDAP (Lightweight Directory Access Protocol)</flag>
    <flag name="protocol_ldaps">LDAPS</flag>
    <flag name="protocol_dict">DICT</flag>
    <flag name="protocol_tftp">TFTP (Trivial File Transfer Protocol)</flag>
    <flag name="protocol_gopher">Gopher</flag>
    <flag name="protocol_pop3">POP3 (Post Office Protocol version 3)</flag>
    <flag name="protocol_pop3s">POP3S</flag>
    <flag name="protocol_imap">IMAP (Internet Message Access Protocol)</flag>
    <flag name="protocol_imaps">IMAPS</flag>
    <flag name="protocol_smb">SMB/CIFS (Server Message Block/Common Internet File System)</flag>
    <flag name="protocol_smbs">SMBS/CIFS</flag>
    <flag name="protocol_smtp">SMTP (Simple Mail Transfer Protocol)</flag>
    <flag name="protocol_smtps">SMTPS</flag>
    <flag name="protocol_rtsp">RTSP (Real Time Streaming Protocol)</flag>
    <flag name="protocol_rtmp">RTMP (Real-Time Messaging Protocol) Streaming Media</flag>
    <flag name="protocol_scp">SCP (Secure copy)</flag>
    <flag name="protocol_sftp">SFTP (SSH File Transfer Protocol)</flag>

    <!-- ### SSL -->
    <flag name="ssl">Crypto engine support. After enabling, choose one of the ssl_* options.</flag>
    <flag name="ssl_axtls">axTLS Embedded SSL</flag>
    <flag name="ssl_gnutls">GnuTLS</flag>
    <flag name="ssl_libressl">LibreSSL</flag>
    <flag name="ssl_mbedtls">mbed TLS (previously PolarSSL)</flag>
    <flag name="ssl_nss">Mozilla Network Security Services</flag>
    <flag name="ssl_openssl">OpenSSL</flag>
    <flag name="ssl_polarssl">PolarSSL (old versions of mbed TLS)</flag>
  </use>
</pkgmetadata>
